{
    "manifest_version": 3,
    "name": "Job Data Extractor",
    "version": "1.0",
    "description": "Extracts job info from job-cards and displays JSON.",
    
    "permissions": [
        "activeTab",
    "tabs",
    "scripting"
    ],
  
    "icons": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
  
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "48": "icons/icon48.png"
      }
    },
  
    "content_scripts": [
      {
        "matches": ["<all_urls>"], 
        "js": ["content-script.js"]
      }
    ]
  }
  